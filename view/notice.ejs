<%- include('header'); -%>
<%- include('sidebar'); -%>
<%- include('functions') -%>

<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header">
                        인게임 공지 보내기용
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <select name="notice_env" id="notice_env" class="form-control">
                                <option value="">환경을 선택해주세요</option>
                                <% for (let i = 0; i < env_list.length; i++) { %>
                                <option value="<%=env_list[i]%>"><%=env_list[i]%></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="notice_message" class="col-form-label">내용</label>
                            <textarea id="notice_message" class="form-control" name="notice_message"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="notice_sec" class="col-form-label">표시 시간(초)</label>
                            <input type="number" id="notice_sec" class="form-control" name="notice_sec"></>
                    </div>
                    <button id="send_notice" class="btn btn-primary">전송</button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>



<%- include('footer'); -%>